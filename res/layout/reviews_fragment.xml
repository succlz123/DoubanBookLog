<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    <org.succlz123.doubanbooklog.support.xlistview.me.maxwin.view.XListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/reviews_xlistview"
            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            >
    </org.succlz123.doubanbooklog.support.xlistview.me.maxwin.view.XListView>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="貌似没有\n写点什么吧"
              android:textSize="26sp"
              android:textColor="@color/basecolor"
              android:id="@+id/reviews_none"
              android:layout_alignParentEnd="false"
              android:layout_alignParentStart="false"
              android:layout_alignParentBottom="false"
              android:layout_alignParentRight="false"
              android:layout_centerInParent="true"
              android:visibility="gone"/>

    <org.succlz123.doubanbooklog.support.com.shamanland.fab.FloatingActionButton
            android:id="@+id/reviews_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="20dp"
            android:src="?attr/icActionEdit"
            />

</RelativeLayout>